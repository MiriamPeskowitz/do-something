<h2>Small daily actions add up.</h2>

<% if @things.empty? %>
	<h3>Welcome,<%= current_user.username.capitalize %>, what did you do today? </3>

<% else %>
  <h3>Welcome, <%= current_user.username.capitalize %>, here's what you've been doing: </h3><br>
	<ol>
		<% @things.each do |thing| %>
			<li><a href='/things/<%= thing.id %>'> <%= thing.date %> <%= thing.title %> -- <%= thing.description %></a>	</li><br>
		<% end %>
	</ol>
<% end %>


 <div class="buttons">
	<h3 class="link"><a href="/things/new">Add something new</a></h3>
    <h3 class="link"><a href="/things">See all actions</a></h3>
	<h3 class="link"><a href="/futures/new">Plans for the future</a></h3>
	<h3 class="link"><a href="/users/logout">Logout</a></h3>
</div>
